<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashboardActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/timeImg"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:background="#00F5B8B8"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/oscar" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:text="TOKEN: "
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnFilmes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="ListFilmes"
        android:text="Filmes"
        android:textAlignment="center"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnDiretores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="ListDiretor"
        android:text="Diretores"
        android:textAlignment="center"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnEnviarVotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="confirmaVoto"
        android:text="Enviar Votos"
        android:textAlignment="center"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Sair"
        android:text="Sair"
        android:textAlignment="center"
        android:textStyle="bold|italic" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>